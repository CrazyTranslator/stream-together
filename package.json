{
  "name": "stream-together",
  "version": "1.0.0",
  "scripts": {
    "devClient": "vite",
    "buildClient": "vite build",
    "startServer": "ts-node ./src/server/index.ts",
    "devServer": "nodemon startServer",
    "devContentScript": "tsc --project src/plugin --inlineSourceMap --inlineSources"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "morgan": "^1.10.0",
    "ts-node": "^8.10.2",
    "uuid": "^8.2.0",
    "vue": "^3.0.0-rc.1",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/chrome": "0.0.122",
    "@types/express": "^4.17.6",
    "@types/express-ws": "^3.0.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.22",
    "@types/uuid": "^8.0.0",
    "@types/ws": "^7.2.6",
    "@vue/compiler-sfc": "^3.0.0-rc.1",
    "nodemon": "^2.0.4",
    "typescript": "^3.9.6",
    "vite": "^1.0.0-rc.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src/server"
    ],
    "exec": "npm run startServer",
    "ext": "ts"
  }
}
